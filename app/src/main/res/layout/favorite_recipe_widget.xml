<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/old_paper"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_recipe_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_recipe_title_horizontal_margin"
        android:layout_marginLeft="@dimen/widget_recipe_title_horizontal_margin"
        android:layout_marginRight="@dimen/widget_recipe_title_horizontal_margin"
        android:layout_marginStart="@dimen/widget_recipe_title_horizontal_margin"
        android:layout_marginTop="@dimen/widget_margin_to_item_above"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:text="Name:" />

    <TextView
        android:id="@+id/widget_ingredients_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_recipe_ingredients_horizontal_margin"
        android:layout_marginLeft="@dimen/widget_recipe_ingredients_horizontal_margin"
        android:layout_marginRight="@dimen/widget_recipe_ingredients_horizontal_margin"
        android:layout_marginStart="@dimen/widget_recipe_ingredients_horizontal_margin"
        android:layout_marginTop="@dimen/widget_margin_to_item_above"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="Ingredients" />

</LinearLayout>