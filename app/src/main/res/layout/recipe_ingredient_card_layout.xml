<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ingredient_step_card_height"
        android:layout_marginBottom="@dimen/ingredient_step_card_vertical_margin"
        android:layout_marginTop="@dimen/ingredient_step_card_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ingredients_step_tv"
                android:layout_width="@dimen/responsive_size"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ingredient_step_card_text_vertical_margin"
                android:layout_marginEnd="@dimen/ingredient_step_card_text_horizontal_margin"
                android:layout_marginStart="@dimen/ingredient_step_card_text_horizontal_margin"
                android:layout_marginTop="@dimen/ingredient_step_card_text_vertical_margin"
                android:text="@string/ingredients"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>